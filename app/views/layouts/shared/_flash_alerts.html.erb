<% if flash.any? %>
  <div class="alerts">
    <% flash.each do |key, message| %>
      <% unless key == :timedout %>
        <div class="alert alert-<%= bootstrap_alert_context(key) %> alert-dismissible"
             role="alert">

          <button type="button" class="close" data-dismiss="alert"
                  aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>

          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
